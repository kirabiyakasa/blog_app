<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table>
  <thead>
    <tr>
      <th>Username&nbsp;</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.username %></td>
        <td><%= author.email %>&nbsp;</td>
        <td><%= link_to 'Show', author %>&nbsp;</td>
        <td><%= link_to 'Edit', edit_author_path(author) %>&nbsp;</td>
        <td><%= link_to 'Destroy', author, method: :delete, 
        data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

